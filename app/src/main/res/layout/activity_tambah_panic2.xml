<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.homefragment.TambahPanic2Activity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/_12ssp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:layout_margin="@dimen/_16ssp"
            android:padding="@dimen/_4ssp"
            android:background="@drawable/btn_white"
            android:backgroundTint="@color/G30"
            android:src="@drawable/icon_arrow_back"
            android:adjustViewBounds="true"/>

        <TextView
            style="@style/TVBlackBold2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16ssp"
            android:gravity="center"
            android:text="@string/detail_panic" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayout"
        android:src="@drawable/map2"
        android:scaleType="fitXY"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16ssp"
        android:backgroundTint="@color/white"
        android:layout_below="@id/relativeLayout"
        app:cardCornerRadius="@dimen/_12ssp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_8ssp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TVG90Medium1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alamat" />

            <TextView
                android:id="@+id/desc"
                style="@style/TVBlackMedium3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4ssp"
                android:text="@string/tulis_alamat" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/TVWhiteMedium2"
        android:id="@+id/btn_konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_16ssp"
        android:elevation="@dimen/_2ssp"
        android:background="@drawable/btn_gradient"
        android:backgroundTint="@color/red"
        android:padding="@dimen/_8ssp"
        android:gravity="center"
        android:text="@string/konfirmasi" />

</RelativeLayout>