<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4ssp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="@dimen/_12ssp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_4ssp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_75ssp"
            android:layout_height="@dimen/_90ssp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/RectangleImageView"
            android:src="@drawable/vongola" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_8ssp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TVBlackBold5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_title" />

            <TextView
                android:id="@+id/desc"
                style="@style/TVG90Medium2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4ssp"
                android:text="@string/info_desc" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>